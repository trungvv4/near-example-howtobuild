{
  "name": "guest-book",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:contract && yarn build:web",
    "build:contract": "gulp",
    "build:web": "parcel build src/index.html --public-url ./",
    "dev:deploy:contract": "near dev-deploy",
    "deploy:contract": "near deploy",
    "deploy:pages": "gh-pages -d dist/",
    "deploy": "yarn build && yarn deploy:contract && yarn deploy:pages",
    "lint": "eslint .",
    "prestart": "yarn build:contract && yarn dev:deploy:contract",
    "start": "CONTRACT_NAME=$(cat neardev/dev-account) parcel src/index.html",
    "dev": "nodemon --watch assembly -e ts --exec 'yarn start'",
    "test": "yarn build:contract && asp && jest"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "assemblyscript": "0.9.3",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "gulp": "^4.0.2",
    "jest": "^25.1.0",
    "jest-environment-node": "^25.1.0",
    "near-sdk-as": "^0.1.0-1",
    "near-shell": "^0.20.1",
    "nodemon": "^2.0.2",
    "parcel-bundler": "^1.12.4",
    "react-test-renderer": "^16.12.0",
    "sass": "^1.26.2",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "nearlib": "^0.21.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "regenerator-runtime": "^0.13.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/__mocks__/fileMock.js"
    },
    "setupFiles": [
      "<rootDir>/src/jest.init.js"
    ],
    "testEnvironment": "near-shell/test_environment",
    "testPathIgnorePatterns": [
      "assembly/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
